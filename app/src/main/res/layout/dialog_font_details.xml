<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_font_details_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_12"
        android:padding="@dimen/margin_4"
        android:textAlignment="textStart"
        android:textSize="@dimen/text_size_16"
        tools:text="Description comes here" />

    <RelativeLayout
        android:id="@+id/layout_bottom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_font_details_message"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_rating_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button_font_details_got_it"
            android:layout_alignBottom="@+id/button_font_details_got_it"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/margin_20"
            android:padding="@dimen/margin_4"
            android:text="@string/rating_lbl"
            android:textAlignment="textStart"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_rating_lbl"
            android:layout_alignBottom="@+id/tv_rating_lbl"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_toEndOf="@+id/tv_rating_lbl"
            android:text=""
            android:textAlignment="textStart"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/button_font_details_got_it"
            style="@style/DialogButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/button_got_it"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_size_16" />

    </RelativeLayout>

</RelativeLayout>